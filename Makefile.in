liblacewing.@SO_EXT@: $(OBJECTS)
	@echo Linking shared library...
	@$(CXX) $(CXXFLAGS) $(SONAME_FLAGS) -shared -o $(REAL_NAME) ./build/*.o $(LIBS)

liblacewing.a: $(OBJECTS)
